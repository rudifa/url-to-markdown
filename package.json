{
    "name": "url-to-markdown",
    "version": "0.1.0",
    "main": "dist/index.html",
    "type": "module",
    "scripts": {
        "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser && cp index.html dist/",
        "dev": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser --watch && cp index.html dist/",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:web": "RUN_WEB_TESTS=true vitest run",
        "test:web:verbose": "RUN_WEB_TESTS=true VERBOSE_METADATA=true vitest run",
        "test:verbose": "VERBOSE_METADATA=true vitest run",
        "test:fast": "vitest run",
        "test:all": "RUN_WEB_TESTS=true vitest run",
        "test:all:verbose": "RUN_WEB_TESTS=true VERBOSE_METADATA=true vitest run"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.17"
    },
    "devDependencies": {
        "@types/dompurify": "^3.0.5",
        "@types/node": "^24.1.0",
        "@vitest/ui": "^3.2.4",
        "esbuild": "^0.25.8",
        "typescript": "^5.0.0",
        "undici": "^7.13.0",
        "vitest": "^3.2.4"
    },
    "logseq": {
        "id": "_ollalogvj"
    }
}
